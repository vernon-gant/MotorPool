@page
@using MotorPool.Domain
@model IndexModel

@{
    ViewData["Title"] = "Vehicles Management";
}

<h1 class="text-center">Vehicles</h1>

<p>
    <a asp-page="Add">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].VIN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].ManufactureYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].ManufactureLand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle[0].Mileage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Vehicle item in Model.Vehicle) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VIN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufactureYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManufactureLand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mileage)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VehicleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.VehicleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.VehicleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
