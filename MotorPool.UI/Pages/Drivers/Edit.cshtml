@page
@model MotorPool.UI.Pages.Drivers.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Driver</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Driver.DriverId" />
            <div class="form-group">
                <label asp-for="Driver.FirstName" class="control-label"></label>
                <input asp-for="Driver.FirstName" class="form-control" />
                <span asp-validation-for="Driver.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.LastName" class="control-label"></label>
                <input asp-for="Driver.LastName" class="form-control" />
                <span asp-validation-for="Driver.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.Salary" class="control-label"></label>
                <input asp-for="Driver.Salary" class="form-control" />
                <span asp-validation-for="Driver.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.EnterpriseId" class="control-label"></label>
                <select asp-for="Driver.EnterpriseId" class="form-control" asp-items="ViewBag.EnterpriseId"></select>
                <span asp-validation-for="Driver.EnterpriseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Driver.ActiveVehicleId" class="control-label"></label>
                <select asp-for="Driver.ActiveVehicleId" class="form-control" asp-items="ViewBag.ActiveVehicleId"></select>
                <span asp-validation-for="Driver.ActiveVehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
