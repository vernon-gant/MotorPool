@page "{vehicleId:int}"
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model EditModel

@{
    ViewData["Title"] = "Edit a vehicle";
}

<div class="header-with-icon mb-4">
    <a href="@(HttpContext.Session.GetString("VehicleIndexReturnUrl") ?? "/Vehicles")" class="btn btn-link">
        <i class="fa-solid fa-arrow-left fa-2x me-2"></i>
    </a>
    <h1 class="text-center">Edit Vehicle</h1>
</div>
<div class="row">
    <div class="col-md-4 mx-auto d-flex flex-column justify-content-between px-0">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleViewModel.VehicleId"/>
            <div class="form-group">
                <label asp-for="VehicleViewModel.MotorVIN" class="control-label"></label>
                <input asp-for="VehicleViewModel.MotorVIN" class="form-control"/>
                <span asp-validation-for="VehicleViewModel.MotorVIN" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleViewModel.Cost" class="control-label"></label>
                <input asp-for="VehicleViewModel.Cost" class="form-control"/>
                <span asp-validation-for="VehicleViewModel.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleViewModel.ManufactureYear" class="control-label"></label>
                <input asp-for="VehicleViewModel.ManufactureYear" class="form-control"/>
                <span asp-validation-for="VehicleViewModel.ManufactureYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleViewModel.ManufactureLand" class="control-label"></label>
                <input asp-for="VehicleViewModel.ManufactureLand" class="form-control"/>
                <span asp-validation-for="VehicleViewModel.ManufactureLand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleViewModel.Mileage" class="control-label"></label>
                <input asp-for="VehicleViewModel.Mileage" class="form-control"/>
                <span asp-validation-for="VehicleViewModel.Mileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleViewModel.VehicleBrandId" class="control-label"></label>
                <select asp-for="VehicleViewModel.VehicleBrandId" class="form-control"
                        asp-items="@Model.VehicleBrandSelectList">
                    <option value="">-- Select brand --</option>
                </select>
            </div>
            <div class="form-group mt-3 row">
                <input type="submit" value="Save" class="btn btn-primary mx-auto col-md-4"/>
            </div>
        </form>
    </div>
</div>